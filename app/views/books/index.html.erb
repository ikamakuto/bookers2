
<% if @book.errors.any? %>
  <ul>
    <%= @book.errors.count %>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>


        <div class="container">
         <div class="row">
        <div class= "col-md-3">
         <h2>User info</h2>
     <table class="table">
           <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "no_image.jpg", fallback: "no_image.jpg" %></tr>

           <tr>
          <th>name</th>
           <th><%= @user.name %></th>
          </tr>
          <tr>
	      <th>introduction
         <th><%= @user.introduction %></th>
         </tr>
     </table>
     <div class='row'>
    <%= link_to"",edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
    </div></br>


        <%= form_for(@book, url: books_path) do |f| %>
          <h2>New book</h2>
          <p>Title</br>
            <%= f.text_field :title,class: "col-xs-12" %></p>

          <p>Opinion</br>
            <%= f.text_field :body,class: "col-xs-12" %></p>
            <p><%= f.submit 'Create Book',class: "col-xs-12 btn btn-success" %></p>
        <% end %>
        </div>

        <div class='col-md-8 offset-md-1'>
          <h2>Books</h2>
     <table class='table table-hover table-inverse'>
      <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
      <tbody>
         <% @books.each do |book| %>
         <tr>
            <%=link_to user_path(book.user_id) do %>
         <td> <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg",size:'40x40',format: 'jpeg' %></td>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>
         </tr>
         <% end %>

            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>