<% if @book.errors.any? %>
  <ul>
    <%= @book.errors.count %>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>

<p>Title</br>
<%= f.text_field :title,class:"col-xs-12" %></p>


<p>Opinion</br>
<%= f.text_area :body,class:"col-xs-12" %></p>


<nav>
  <p><%= f.submit 'Update Book',class: "col-xs-12 btn btn-success" %></p>
</nav>
<% end %>

<%= link_to "Show",book_path(@book.id) %> |
<%= link_to "Back",books_path %>

 <footer>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
    </div>
  </div>
</div>