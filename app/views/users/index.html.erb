<div class="box">
        <div class="col-xs-3">
            <h2>User info</h2>

             <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "no_image.jpg", fallback: "no_image.jpg" %>
            <h5>name</h5>
            <%= @user.name %>
            <h5>information</h5>
            <%= @user.information %>
            <%= link_to"",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>


            <%= form_for(@book, url:book_path) do |f| %>

            <h2>New book</h2>
            <h4>Title</h4>
            <%= f.text_field :title,class: "col-xs-12" %>

            <h4>Opinion</h4>
            <%= f.text_field :body,class: "col-xs-12" %>
            <nav>
                <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
            </nav>
            <% end %>
        </div>

        <div class= "col-xs-9">
            <h2>Users</h2>
            <table class= 'table'>

              <% @user.each do |user| %>
                <tr>
                <td>
