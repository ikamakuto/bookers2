<% if @user.errors %>
 <ul>
   <% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>Image</h4>
  <%= f.attachment_field @user, :profileimage %>
  <%= attachment_image_tag @user, :profileimage, :fill, 60, 60, fallback: "no_image.jpg"%>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <%= f.submit "Update User" %>
<% end %>