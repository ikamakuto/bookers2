<% if @user.errors.any? %>
   <% @user.errors.full_messages.each do |message| %>
    <%= message %>
   <% end %>
<% end %>

<%= form_with model:@user, url: user_path(current_user.id), local:true do |f| %>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>
  <p>Name</br>
  <%= f.text_field :name %></p>
  <p>Image</br>
  <%= f.attachment_field :profile_image %>

  <p>Introduction</br>
  <%= f.text_area :introduction %></p>
  <%= f.submit 'Update User',class: "btn btn-secondary" %>

<% end %>
