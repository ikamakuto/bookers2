
    <div class="container">
      <div class="row">
    <div class= "col-md-3">
     <h2>User info</h2>
  <table class="table">

    <tr><%= attachment_image_tag @user, :profileimage, :fill, 100, 100, fallback: "no_image.jpg", format: 'no_image.jpg' %></tr>

    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
	  <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
  <div class='row'>
    <%= link_to"",edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
    </div>



  <%= form_for(@book, url:books_path) do |f| %>
    <div class='row'></div>
      <h2>New book</h2>
      <p>Title</br>
      <%= f.text_field :title,class: "col-xs-12" %></p>
        <p>Opinion</br>
      <%= f.text_field :body,class: "col-xs-12" %></p>
    <nav>
      <%= f.submit 'Creat Book',class: "col-xs-12 btn btn-success" %>
    </nav>
  <% end %>
    </div>

  <div class='col-md-8 offset-md-1'>
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th></br>
      <th colspan="3"></th>
     </tr>
  </thead>
  <tbody>
        <% @books.each do |book| %>
    <%= link_to user_path(@user.id) do %>
    <tr>
      <td><%= attachment_image_tag @user, :profileimage, fallback: "no_image.jpg", size:'40x40' %></td>
    <% end %>
    <td><%=link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>

