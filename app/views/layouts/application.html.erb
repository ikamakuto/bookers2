<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="header">
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-left">
          <span class="title">Bookers</span>
        </nav>
        <nav class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li class="">
            <%= link_to user_path(current_user), class: "btn btn-link" do %>
            <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
            <% end %>
          </li>
          <li class="">
            <%= link_to users_path, class: "btn btn-link" do %>
            <span class="glyphicon glyphicon-user" aria-hidden="true"> Users</span>
          <% end %>
          </li>
          <%= link_to books_path, class: "btn btn-link" do %>
            <span class="glyphicon glyphicon-book" aria-hidden="true"> Books</span>
            <% end %>
          </li>
        </nav>
      </div>
    </header>

      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>

    <% end %>

    <%= yield %>
  </body>
  <p></p>CopyRight Infratop.inc</p>
</html>
